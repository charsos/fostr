  <div class="container page">
    <div class="row">
      <!-- left side of page with name of pet, their description and details section -->
      <div class="col-8">
        <div class="title pet-name"><strong><%= @pet.name.upcase %></strong></div>
          <div class="container pet-container pet-description">
            <li class="no-bullets"><strong>Description: </strong><%=@pet.description %></li>
          </div>
          <br>
          <div class="container pet-container pet-details">
            <ul>
              <div class="d-flex justify-content-around">
                <div class="left-set">
                  <li class="no-bullets"><strong>Breed: </strong><%=@pet.breed.capitalize %></li>
                  <li class="no-bullets"><strong>Size: </strong><%=@pet.size.capitalize %></li>
                  <li class="no-bullets"><strong>Age: </strong><%=@pet.age %></li>
                  <li class="no-bullets"><strong>Activity Level: </strong><%=@pet.activity_level.capitalize %></li>
                </div>
                <div class="right-set">
                  <li class="no-bullets"><strong>Sociability: </strong><%=@pet.sociability.capitalize %></li>
                  <li class="no-bullets"><strong>Good With Kids: </strong>
                    <%= if @pet.good_with_kids
                        "Yes"
                      else
                        "No"
                      end %></li>
                  <li class="no-bullets"><strong>Good With Other Pets: </strong>
                    <%= if @pet.good_with_other_pets
                        "Yes"
                      else
                        "No"
                      end %></li>
                  <li class="no-bullets"><strong>Hypoallergenic: </strong>
                    <%= if @pet.hypoallergenic
                        "Yes"
                      else
                        "No"
                      end %></li>
                </div>
              </div>
            </ul>
         </div>
       </div>
      <!-- right side of page with photo, foster status and button to initiate foster -->
      <div class="col-4 text-center">
        <div class = "container-photo">
        <div class="pet-photo">
          <%= cl_image_tag @pet.photo, height: 500, crop: :fill %>
        </div>
          <div class="pet-container"><strong><%= @pet.status.capitalize %></strong></div>
          <div class="btn btn-info pet-btn"><%= link_to "FOSTER ME", new_pet_foster_path(@pet)%></div>
          <% if policy(@pet).edit? %>
            <div class="btn edit-btn">
              <%= link_to "Edit", edit_pet_path %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  </div>


