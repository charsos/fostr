<div class="container">
  <div class="row">
    <!-- left side of page with name of pet, their description and details section -->
    <div class="col-8">
      <div class="container pet-container pet-name"><%= @pet.name %></div>
      <div class="container pet-container pet-description"><%= @pet.name %></div>
      <div class="container pet-container pet-details">
        <ul>
          <li class="no-bullets"><%= @pet.breed %></li>
          <li class="no-bullets"><%= @pet.size %></li>
          <li class="no-bullets"><%= @pet.age %></li>
          <li class="no-bullets"><%= @pet.activity_level %></li>
          <li class="no-bullets"><%= @pet.sociability %></li>
        </ul>
      </div>
    </div>
    <!-- right side of page with photo, foster status and button to initiate foster -->
    <div class="col-4 text-center">
      <div class="container pet-photo">
        <%= cl_image_tag @pet.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="container pet-container"><%= @pet.status %></div>
      <div class="btn btn-success pet-btn">FOSTER ME</div>
    </div>
  </div>
</div>


<%= cl_image_tag @pet.photo, height: 300, width: 400, crop: :fill %>

<div><%= link_to "Foster this one!", pet_fosters_path(@pet), method: "post" %></div>

<% if false %>
<%= simple_form_for @pet,
    :url => url_for(:action => 'create', :controller => 'fosters'),
    :method => 'post' do |f| %>
    <% end %>

<%= simple_form_for @pet do |f| %>
  <%= f.input :date, as: :date, start_year: Date.today.year - 90,
                              end_year: Date.today.year - 12, discard_day: true,
                              order: [:month, :year] %>
  <%= f.input :accepts, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.button :submit %>
<% end %>
<% end %>

