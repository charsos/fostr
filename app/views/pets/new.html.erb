<div class = "container-headline">
  <h1>Add a Pet To Foster</h1>
  <div class = "form-container">
    <div class="inner-form-container">
      <div>
        <%= simple_form_for(@pet) do |f| %>
          <!-- [...] -->
          <%= f.input :name %>
          <%= f.input :breed %>
          <%= f.input :size, collection: ['Small', 'Medium', 'Large'] %>
          <%= f.input :age, collection: 0..20 %>
          <%= f.input :activity_level, collection: ['Low', 'Medium', 'High'] %>
          <%= f.input :sociability, collection: ['Low', 'Medium', 'High'] %>
          <%= f.input :hypoallergenic, collection: ['Yes', 'No'] %>
          <%= f.input :good_with_kids, collection: ['Yes', 'No'] %>
          <%= f.input :good_with_other_pets, collection: ['Yes', 'No'] %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :description %>
          <%= f.association :shelter, collection: @my_shelters %>
          <!-- f.association :shelter, collection: Shelter.where(user: @user) -->
          <%= f.button :submit, class: 'btn btn-info' %>
          <!-- [...] -->
        <% end %>
      </div>
    </div>
  </div>
</div>
