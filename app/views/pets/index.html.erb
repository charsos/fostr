


<div  style="width: 100%">
   <div class="home-banner" style="background-image: linear-gradient(-90deg, rgba(0,0,0,0.45) 0%, rgba(0,0,0,0.4) 50%), url('<%= image_path 'FOSTR-BANNER.jpg' %>');">
    <div class="banner-content">
      <strong> <h1>Welcome to FOSTR</h1> </strong>
      <p>Find Your Perfect Foster Pup</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <%= link_to "", pet_path(pet)%>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.1)), url('<%= pet.photo.url.nil? ? "placeholder" : cl_image_path(pet.photo.url, width: 400, height: 500, crop: :fill) %>')">
        <%= link_to "", pet_path(pet), class: 'card-link' %>
        <div class="card-description" class ="card-label">
          <%= pet.name %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
 </div>


