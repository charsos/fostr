<div class="container container-headline">
   <div class="home-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.6) 50%), url('<%= image_path 'FOSTR-BANNER.jpg' %>');">
  <div class="banner-content">
    <strong> <h1>Welcome to FOSTR</h1> </strong>
    <p>Find Your Perfect Foster Pup</p>
  </div>
</div>

<%= form_tag pets_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search for a pet name, age, breed or availability"
  %>
<% end %>

<div class="row">
  <% @pets.each do |pet| %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <%= link_to "", pet_path(pet)%>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.1)), url('<%= pet.photo.url.nil? ? "placeholder" : cl_image_path(pet.photo.url, width: 400, height: 500, crop: :fill) %>')">
      <%= link_to "", pet_path(pet), class: 'card-link' %>
      <div class="card-description" class ="card-label">
        <%= pet.name %>
      </div>
    </div>
  </div>
  <% end %>
</div>
